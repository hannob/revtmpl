#!/bin/bash
# author: Hanno BÃ¶ck, https://hboeck.de/
# license: 0BSD

indeximgs="$(grep -o 'src=["'\''][a-zA-Z0-9._-]*["'\'']' index.html |
	sed -e 's:src=["'\'']\([a-zA-Z0-9._-]*\)["'\'']:\1:g' |
	sort -u)"

dirimgs="$(find * -name \*.gif -or -name \*.bmp \
	-or -name \*.png -or -name \*.jpg -or -name \*.jpeg \
	-or -name \*.webp -or -name \*.avif -or -name \*.svg |
	sort -u)"

comm -13 <(echo "$indeximgs") <(echo "$dirimgs")
